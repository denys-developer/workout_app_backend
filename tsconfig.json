{
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "plugins": [
      {
        "name": "tsconfig-paths",
        "baseUrl": "./dist",
        "paths": {
          "@/*": ["*"]
        }
      }
    ]
  },
  "include": ["src/**/*.ts"]
}